{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es6",
      "es7"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.wxs"
  ],
  "include": [
    "src/**/*"
  ]
}